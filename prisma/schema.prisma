generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Define enum for roles
enum Role {
  ADMIN
  STAFF
}

enum AccountStatus {
  UNVERIFIED_EMAIL
  ORG_UNATTACHED
  ACTIVE
  VERIFIED_EMAIL
}

// User model
model User {
  id       String        @id @default(uuid())
  email    String        @unique
  password String
  name     String?
  role     Role          @default(STAFF)
  status   AccountStatus @default(UNVERIFIED_EMAIL)

  organization   Organization? @relation("OrganizationUsers", fields: [organizationId], references: [id])
  organizationId String?

  orders               Order[]        @relation("UserOrders")
  returns              Return[]       @relation("UserReturns")
  createdOrganizations Organization[] @relation("OrganizationCreator")

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  verificationCode          String?
  verificationCodeExpiresAt DateTime?

  passwordResetToken     String?
  passwordResetExpiresAt DateTime?

  refreshToken          String?
  refreshTokenExpiresAt DateTime?
}

model Organization {
  id   String @id @default(uuid())
  name String

  createdById String?
  createdBy   User?   @relation("OrganizationCreator", fields: [createdById], references: [id])

  users           User[]           @relation("OrganizationUsers")
  categories      Category[]
  products        Product[]
  orders          Order[]
  returns         Return[]
  orderItems      OrderItem[]      @relation("OrgOrderItems")
  returnItems     ReturnItem[]     @relation("OrgReturnItems")
  productMappings ProductMapping[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  clientSecret     String?           @unique @default(uuid())
  integrationTeams IntegrationTeam[]
}

model Category {
  id            String   @id @default(uuid())
  name          String
  description   String?
  imageUrl      String? // Cloudinary URL
  imagePublicId String? // Cloudinary public ID
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  products       Product[]
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  @@unique([name, organizationId])
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  images Json? // Array of Cloudinary URLs and public IDs

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  orderItems      OrderItem[]
  productMappings ProductMapping[]

  @@unique([id, organizationId])
  @@index([organizationId, name])
  @@index([categoryId, organizationId])
}

enum OrderStatus {
  IN_PROCESS
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  CASH
  JAZZCASH
  EASYPAISA
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

model Order {
  id          String      @id @default(uuid())
  name        String      @default("Order")
  totalAmount Float
  status      OrderStatus @default(IN_PROCESS)

  // Payment fields
  paymentMethod PaymentMethod? @default(CASH)
  paymentStatus PaymentStatus? @default(PENDING)
  transactionId String? // Transaction ID from payment gateway
  paymentGatewayResponse Json? // Store full response from gateway
  paidAt DateTime? // When payment was completed

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  cancelledAt DateTime?

  items OrderItem[]

  createdBy   User?   @relation("UserOrders", fields: [createdById], references: [id])
  createdById String?

  returns Return[]

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  source          String  @default("POS")
  externalOrderId String?

  @@unique([id, organizationId])
  @@unique([externalOrderId, source, organizationId])
  @@index([createdAt])
  @@index([createdById])
  @@index([organizationId])
  @@index([paymentStatus])
  @@index([transactionId])
  @@unique([id, organizationId])
}

model OrderItem {
  id String @id @default(uuid())

  order   Order  @relation(fields: [orderId, organizationId], references: [id, organizationId])
  orderId String

  product   Product @relation(fields: [productId, organizationId], references: [id, organizationId])
  productId String

  organization   Organization @relation("OrgOrderItems", fields: [organizationId], references: [id])
  organizationId String

  quantity Int
  price    Float // price at sale time

  returns ReturnItem[]

  @@unique([orderId, productId])
  @@index([orderId])
  @@index([productId])
}

model Return {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  order   Order  @relation(fields: [orderId, organizationId], references: [id, organizationId])
  orderId String

  items ReturnItem[]

  refundedAmount Float

  createdBy   User?   @relation("UserReturns", fields: [createdById], references: [id])
  createdById String?

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  @@index([orderId])
  @@index([organizationId])
}

model ReturnItem {
  id String @id @default(uuid())

  return   Return @relation(fields: [returnId], references: [id])
  returnId String

  organization   Organization @relation("OrgReturnItems", fields: [organizationId], references: [id])
  organizationId String

  orderItem   OrderItem @relation(fields: [orderItemId], references: [id])
  orderItemId String

  quantity Int

  @@index([returnId])
  @@index([orderItemId])
}

model ProductMapping {
  id                String @id @default(uuid())
  externalProductId String // Product ID from external system
  source            String // e.g., "Foodpanda", "UberEats"

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([externalProductId, source, organizationId])
  @@index([organizationId])
}

model Integration {
  id    String  @id @default(uuid())
  name  String
  image String?

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  integrationTeams IntegrationTeam[]
}

model IntegrationTeam {
  id String @id @default(uuid())

  integration   Integration @relation(fields: [integrationId], references: [id])
  integrationId String

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([integrationId, organizationId])
}
